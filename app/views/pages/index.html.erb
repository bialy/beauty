<% title "Pages" %>

<table class="general">
  <tr>
    <th>Name</th>
    <th>Permalink</th>
    <th>Content</th>
  </tr>
  <% for page in @pages %>
    <tr>
      <td><%= page.name %></td>
      <td><%= page.permalink %></td>
      <td><%= page.content %></td>
      <% if can? :menage, Page %>
      	<td><%= link_to "Pokaż", page %></td>
      	<td><%= link_to "Edytuj", edit_page_path(page) %></td>
      	<td><%= link_to "Usuń", page, :confirm => 'Czy napewno?', :method => :delete %></td>
      <% end %>	
    </tr>
  <% end %>
</table>

<% if can? :create, Page %>
	<p><%= link_to "Nowa strona statyczna", new_page_path %></p>
<% end %>
