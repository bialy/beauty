<%= form_for @picture, :html => { :multipart => true } do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  	<%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :gallery %><br />
    
    <%= f.select :gallery_id, @galleries.map{ |g| [g.name, "#{g.id}:#{g.name}"] }, {}, :style => "width:325px" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
